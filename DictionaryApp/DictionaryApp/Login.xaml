<Window x:Class="DictionaryApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryApp"
        mc:Ignorable="d"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="450" Width="800">
    <Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="200">
            <TextBlock Text="Autentificare" FontSize="20" Margin="0 0 0 20"/>
            <TextBlock Margin="10,105,190,75" Width="200" Height="20"><Run Text="Parola:"/><LineBreak/><Run/></TextBlock>
            <TextBox x:Name="UsernameTextBox" Height="20" Margin="160,65,85,115"/>
            <TextBlock Text="Nume de utilizator:" Width="200" Height="20" Margin="10,65,190,115"/>
            <PasswordBox x:Name="PasswordBox" Height="20" Margin="160,105,85,75"/>

            <Button Content="Autentificare" Click="LoginButton_Click" Margin="100,160,100,20" Width="200" Height="20"/>
        </Grid>
        <Button Content="🏠︎" Click="BackToMainButton_Click" Margin="10,10,732,358"/>
    </Grid>
</Window>
